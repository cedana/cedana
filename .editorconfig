# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_size = 2
indent_style = space
trim_trailing_whitespace = true
end_of_line = lf
max_line_length = 100

[*.py]
indent_size = 4

[*.go]
indent_size = 2

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.sh]
indent_size = 4

[*.bash]
indent_size = 4

[*.bats]
indent_size = 4
